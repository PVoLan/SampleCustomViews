<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ru.pvolan.samplecustomviews.uikit.textview.TitleTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is title"/>

    <ru.pvolan.samplecustomviews.uikit.textview.RegularTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is regular text"
        android:padding="8dp"
        android:gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>

    <ru.pvolan.samplecustomviews.uikit.ProfileItemView
        android:id="@+id/profileItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:piv_title="Name"
        app:piv_icon="@drawable/person"
        android:layout_marginTop="30dp"/>

    <ru.pvolan.samplecustomviews.uikit.ProfileItemView
        android:id="@+id/profileItemPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:piv_title="Phone"
        app:piv_icon="@drawable/phone"
        app:piv_value="0000"
        android:layout_marginTop="10dp"/>

    <ru.pvolan.samplecustomviews.uikit.ProfileItemView
        android:id="@+id/profileItemEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:piv_title="Email"
        app:piv_icon="@drawable/email"
        android:layout_marginTop="10dp"/>

</LinearLayout>